<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:padding="@dimen/category_item_padding_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/words_view"
        android:paddingLeft="@dimen/category_item_padding_horizontal">
        <TextView
            android:id="@+id/french_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/category_item_padding_horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/default_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/category_item_padding_horizontal"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>